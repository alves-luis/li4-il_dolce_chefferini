@model Il_Dolce_Chefferini.Dto.UtilizadorDto
<!DOCTYPE html>

<html>
<head>
    <title>Autenticar</title>
</head>
<body>
<div class="container">
    <div class="row justify-content-center my-2">
        <h1>Autenticar</h1>
    </div>
        <div class="row justify-content-center my-2 form-group">
            <input type="email" class="form-control" id="inputemail" placeholder="E-mail">
            <small id="emailHelp" class="form-text text-muted">Não recomendamos a introdução de dados reais</small>
        </div>
        <div class="form-group row justify-content-center my-2">
            <input asp-for="password" type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
        </div>
        <a asp-controller="UtilizadoresView" asp-action="Index">
            <button type="submit" class="btn btn-primary btn-lg row justify-content-center my-2">Autenticar</button>
        </a>
</div>
</body>
</html>