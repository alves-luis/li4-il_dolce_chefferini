@model Il_Dolce_Chefferini.Models.Receita

<!DOCTYPE html>

<html>
<head>
    <title>Informação Nutricional</title>
</head>
<body>
<h1>Informação Nutricional</h1>
<div class="table-responsive">
    <table class="table">
        <thead>
        <tr>
            <th>Categoria</th>
            <th>Valor</th>
        </tr>
        </thead>
        <tr>
            <td>
                Calorias
            </td>
            <td>
                @Model.calorias kcal
            </td>
        </tr>
        <tr>
            <td>
                Hidratos de carbono
            </td>
            <td>
                @Model.hidratos g
            </td>
        </tr>
        <tr>
            <td>
                Proteínas
            </td>
            <td>
                @Model.proteinas g
            </td>
        </tr>
        <tr>
            <td>
                Lípidos
            </td>
            <td>
                @Model.lipidos g
            </td>
        </tr>
    </table>
</div>

<div class="row mx-2 my-2">
    <a asp-controller="ReceitasView" asp-action="Receita" asp-route-id="@Model.id">
        <button type="button" class="btn btn-primary">Voltar</button>
    </a>
</div>

</body>
</html>