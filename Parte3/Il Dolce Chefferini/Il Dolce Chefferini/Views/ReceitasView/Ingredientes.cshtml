@model System.Collections.Generic.IEnumerable<Il_Dolce_Chefferini.Models.IngredientePasso>

<!DOCTYPE html>

<html>
<head>
    <title>Ingredientes</title>
</head>
<body>
<h1>Ingredientes</h1>
<div class="table-responsive">
    <table class="table">
        <thead>
        <tr>
            <th>Nome</th>
            <th>Quantidade</th>
            <th>Unidade</th>
        </tr>
        </thead>
        @foreach (var r in Model)
        {
            <tr>
                <td>
                    @r.ingrediente.nome
                </td>
                <td>
                    @r.quantidade
                </td>
                <td>
                    @r.unidade
                </td>
            </tr>
        }
    </table>
</div>
<div class="row mx-2 my-2">
    <a asp-controller="ReceitasView" asp-action="Receita" asp-route-id="@Model.First().receitaId">
        <button type="button" class="btn btn-info btn-lg">Voltar</button>
    </a>
</div>

</body>
</html>