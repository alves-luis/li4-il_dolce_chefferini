    </a>
    <a asp-controller="AvaliacaoView" asp-action="AvaliaSatis" asp-route-idConfecao="@Model.idConfecao" asp-route-satis="5">
        <img src="/pictures/estrela.jpeg" class="img-responsive" width="28.85" height="28.85">
    </a>
</div>

</body>
</html>