@model Il_Dolce_Chefferini.Dto.AvaliacaoDto

<!DOCTYPE html>

<html>
<head>
    <title>Avaliaçao</title>
</head>
<body>

<h1 class="mx-3">Avaliaçao</h1>

<div class="row justify-content-center my-2">
    <h2> Dificuldade </h2>
    <a asp-controller="AvaliacaoView" asp-action="AvaliaDif" asp-route-idConfecao="@Model.idConfecao" asp-route-dif="1" >
        <img src="/pictures/estrela.jpeg" class="img-responsive" width="28.85" height="28.85">
    </a>
    <a asp-controller="AvaliacaoView" asp-action="AvaliaDif" asp-route-idConfecao="@Model.idConfecao" asp-route-dif="2" >
