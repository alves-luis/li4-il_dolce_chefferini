        </a>
        <a asp-controller="AvaliacaoView" asp-action="AvaliaAjuda" asp-route-idConfecao="@Model.idConfecao" asp-route-ajuda="5">
            <img src="/pictures/estrela.jpeg" class="img-responsive" width="28.85" height="28.85">
        </a>
    </div>
